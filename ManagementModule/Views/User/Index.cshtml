@model ManagementModule.DTOs.Users.UserIndexViewDto

<div class="row">
	<div class="col-md-3">
		<h5 class="mb-3">Фильтры</h5>
		<form method="get" action="@Url.Action("Index", "User")">
			<div class="mb-3">
				<label class="form-label">ФИО</label>
				<input type="text" class="form-control" name="SearchName" value="@Model.Filter.SearchName" />
			</div>
			<div class="mb-3">
				<label class="form-label">Роль</label>
				@Html.DropDownList("RoleId", 
					new SelectList(Model.Roles, "RoleId", "RoleName", Model.Filter.RoleId),
					"Все",
					new { @class = "form-select" })
			</div>
			<div class="mb-3">
				<label class="form-label">Право</label>
				@Html.DropDownList("PermissionId",
					new SelectList(Model.Permissions, "PermissionId", "PermissionName", Model.Filter.PermissionId),
					"Все",
					new { @class = "form-select" })
			</div>
			<button type="submit" class="btn btn-primary">Применить</button>
		</form>
	</div>

	<div class="col-md-9">
		<h5 class="mb-3">Сотрудники</h5>
		@(Html.Kendo().Grid(Model.Users)
			.Name("usersGrid")
				.Columns(cols =>
				{
					cols.Bound(u => u.Id).Title("ID").Width(80);
					cols.Bound(u => u.FirstName).Title("Имя");
					cols.Bound(u => u.LastName).Title("Фамилия");
					cols.Bound("Id").ClientTemplate(
					"<a href='/User/Details/#= Id #' class='k-button k-button-md k-rounded-md'>Подробнее</a>"
					).Title(" ").Width(150);
				})
			.Pageable()
			.Sortable()
			.Filterable(f => f.Enabled(false))
			.DataSource(ds => ds.Ajax()
				.PageSize(20)
			)
		)
	</div>
</div>
